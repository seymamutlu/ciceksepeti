@model IEnumerable<CicekSepeti.Model.Flower>

@{
    ViewBag.Title = "Çicek Listesi";
}

<h2>Çiçek Listesi</h2>

<p>
    @Html.ActionLink("Yeni Çiçek Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFlowering)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsThorny)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsLeafy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFlowering)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsThorny)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLeafy)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Görüntüle", "Details", new {id = item.Id}) |
                @Html.ActionLink("Sil", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>